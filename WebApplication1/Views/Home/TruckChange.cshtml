@model WebApplication1.Models.Entities.EntityTruck
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@using (Html.BeginForm("TruckChange", "Home", FormMethod.Post))
{


    <div class="col-md-12">
        <div class="col-md-6">

            ID
        </div>


        <div class="col-md-6">

            @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly" })
        </div>
    </div>


    <div class="col-md-12">
        <div class="col-md-6">

            Model
        </div>


        <div class="col-md-6">


            @{
                SelectList SelectListmodels = new SelectList(Model.oListModels.ToList(), "Id", "model", Model.Model.Id);

                @Html.DropDownListFor(m =>m.Model.Id , SelectListmodels, "Select Item", new { @class = "form-control" })
            }
        </div>
    </div>

    <div class="col-md-12">
        <div class="col-md-6">

            Factory Year
        </div>


        <div class="col-md-6">

            @Html.TextBoxFor(m => m.FactoryYear)
        </div>
    </div>

    <div class="col-md-12">
        <div class="col-md-6">
            Model Year
        </div>


        <div class="col-md-6">

            @Html.TextBoxFor(m => m.ModelYear)

        </div>
    </div>

    <div class="col-md-12">
        <button type="submit" class="btn-danger">Submit</button>
    </div>
}

